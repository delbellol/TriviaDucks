<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".ui.home.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/close_description"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            style="@style/Widget.Material3.MaterialTimePicker.ImageButton"/>

        <TextView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/account"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="300dp"
            android:contentDescription="@string/close_description"
            android:src="@drawable/cover"
            style="@style/Widget.Material3.MaterialTimePicker.ImageButton"/>
        <Button
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/change_password"
            app:icon="@drawable/baseline_password_24"
            app:iconGravity="textStart"
            app:iconTint="@null"
            />

        <Button
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/change_number"
            app:icon="@drawable/baseline_local_phone_24"
            app:iconGravity="textStart"
            app:iconTint="@null"
            />

        <Button
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/mail"
            app:icon="@drawable/baseline_alternate_email_24"
            app:iconGravity="textStart"
            app:iconTint="@null"
            />
    </LinearLayout>
</LinearLayout>