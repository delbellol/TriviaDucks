<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_tertiaryContainer"
    tools:context=".ui.home.fragment.AccountInformationFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/DefaultImagesGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/material_dynamic_primary90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose or Upload a new image:"
                android:gravity="center"
                android:textColor="@color/material_dynamic_neutral40"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="15dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/ImportPfpFromDeviceBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload_icon"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p2"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p1"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p3"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p4"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p5"
                    android:background="@color/design_default_color_on_secondary" />

                <ImageButton
                    android:id="@+id/defaultProfilePicture6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p6"
                    android:background="@color/design_default_color_on_secondary" />
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/marginTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/accountInformationCardView"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/accountInformationCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toTopOf="@+id/midMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.40"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marginTop"
            app:layout_constraintWidth_percent="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/profilePicture"
                        style="@style/Widget.Material3.MaterialTimePicker.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/close_description"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/changePfpBtnsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-50dp"
                    android:layout_marginEnd="50dp"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/ChangePfPBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/account_choose_image_background"
                        android:contentDescription="Change pfp image"
                        android:maxWidth="50dp"
                        android:maxHeight="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/toolpencil" />


                </LinearLayout>

                <TextView
                    android:id="@+id/countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="USERNAME"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/midMargin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountInformationCardView"
            app:layout_constraintBottom_toTopOf="@id/accountStatisticsCardView"
            app:layout_constraintHeight_percent="0.05" />

        <androidx.cardview.widget.CardView
            android:id="@+id/accountStatisticsCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/midMargin"
            app:layout_constraintBottom_toTopOf="@+id/bottomMargin"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintWidth_percent="0.9"
            app:cardCornerRadius="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistiche Account"
                    android:layout_margin="25dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorie preferite"
                    android:layout_margin="25dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record Risposte corrette"
                    android:layout_margin="25dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/bottomMargin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountStatisticsCardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.05" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>