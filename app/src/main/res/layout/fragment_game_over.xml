<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="@color/md_theme_secondaryContainer"
    android:elevation="4dp"
    android:padding="16dp">

    <!--TODO replace 300dp with something other-->
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/you_lost" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_gameover"
        android:textColor="@color/md_theme_onSecondaryContainer"
        android:textSize="40sp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/md_theme_onSecondaryContainer"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/score_description" />


    <TextView
        android:id="@+id/dialog_question"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_question_description"
        android:textColor="@color/md_theme_onSecondaryContainer"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correct_answer_description"
        android:layout_gravity="center"
        android:textColor="@color/md_theme_onSecondaryContainer"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/back_home"
        android:layout_gravity="center"/>
</LinearLayout>